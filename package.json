{
    "name": "ai-dev-peru",
    "private": true,
    "workspaces": [
        "apps/*"
    ],
    "scripts": {
        "dev": "bun --cwd apps/web dev",
        "build": "rm -rf dist && bun --cwd apps/web build && mkdir -p dist && cp -r apps/web/dist/* dist/",
        "lint": "bun --cwd apps/web lint",
        "typecheck": "bun --cwd apps/web typecheck",
        "test": "bun --cwd apps/web test",
        "prepare": "husky"
    },
    "devDependencies": {
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7"
    },
    "lint-staged": {
        "apps/web/**/*.{ts,tsx}": [
            "bun --cwd apps/web lint",
            "bash -c 'bun run typecheck'",
            "bash -c 'bun run test'"
        ]
    }
}