{
    "name": "ai-dev-peru",
    "private": true,
    "workspaces": [
        "apps/*"
    ],
    "scripts": {
        "dev": "bun run dev:internal & bun run dev:public",
        "dev:internal": "bun --cwd apps/internal dev",
        "dev:public": "bun --cwd apps/public dev",
        "build": "rm -rf dist && bun run build:internal && bun run build:public",
        "build:internal": "bun --cwd apps/internal build && mkdir -p dist/internal && cp -r apps/internal/dist/* dist/internal/",
        "build:public": "bun --cwd apps/public build && cp -r apps/public/dist/* dist/",
        "lint:internal": "bun --cwd apps/internal lint",
        "lint:public": "bun --cwd apps/public lint",
        "typecheck:internal": "bun --cwd apps/internal typecheck",
        "typecheck:public": "bun --cwd apps/public typecheck",
        "test:internal": "bun --cwd apps/internal test",
        "test:public": "bun --cwd apps/public test",
        "prepare": "husky"
    },
    "devDependencies": {
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7"
    },
    "lint-staged": {
        "apps/internal/**/*.{ts,tsx}": [
            "bun --cwd apps/internal lint",
            "bash -c 'bun run typecheck:internal'",
            "bash -c 'bun run test:internal'"
        ],
        "apps/public/**/*.{ts,tsx}": [
            "bun --cwd apps/public lint",
            "bash -c 'bun run typecheck:public'",
            "bash -c 'bun run test:public'"
        ]
    }
}