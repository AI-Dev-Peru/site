{
    "rewrites": [
        {
            "source": "/internal/(.*\\..*)",
            "destination": "/apps/internal/dist/$1"
        },
        {
            "source": "/internal/(.*)",
            "destination": "/apps/internal/dist/index.html"
        },
        {
            "source": "/internal",
            "destination": "/apps/internal/dist/index.html"
        },
        {
            "source": "/(.*\\..*)",
            "destination": "/apps/public/dist/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/apps/public/dist/index.html"
        }
    ]
}