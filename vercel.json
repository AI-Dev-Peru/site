{
    "cleanUrls": true,
    "rewrites": [
        {
            "source": "/internal/(.*\\..*)",
            "destination": "/internal/$1"
        },
        {
            "source": "/internal/(.*)",
            "destination": "/internal/index.html"
        },
        {
            "source": "/internal",
            "destination": "/internal/index.html"
        },
        {
            "source": "/(.*\\..*)",
            "destination": "/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}